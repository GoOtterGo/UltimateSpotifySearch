{
  "name": "Ultimate Spotify Search",
  "version": "1.2",
  "manifest_version": 2,
  "description": "Simplifies search on Spotify with launchers on popular sites and search from right-click",

  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "*://play.spotify.com/*"
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    "icons/*.png"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*", "*://*.soundcloud.com/*", "*://*.bandcamp.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],

  "background" : {
    "scripts": [
                "background.js"
               ],
    "persistent": false
  },

  "options_page": "extensionPages/settings.html"
}
